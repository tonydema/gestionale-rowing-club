# Database (Railway fornisce questa variabile automaticamente)
DATABASE_URL="postgresql://user:password@host:5432/database"

# JWT - IMPORTANTE: Cambiare in produzione!
JWT_SECRET="genera-una-stringa-sicura-di-almeno-32-caratteri"
JWT_REFRESH_SECRET="genera-un-altra-stringa-sicura-diversa"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
NODE_ENV="production"
PORT=3000

# CORS - Impostare l'URL del frontend deployato
CORS_ORIGIN="https://your-frontend-url.railway.app"
